# disable bluetooth
rfkill block bluetooth # add it to the "/etc/rc.local" file, before the "exit 0" line
gsettings set com.canonical.indicator.bluetooth visible false

# convert mp3 tags
sudo apt-get install python-mutagen
find -iname '*.mp3' -print0 | xargs -0 mid3iconv -eCP1251 --remove-v1

# download files listed in $url
wget -i $url --trust-server-names=on --restrict-file-names=nocontrol

# enable java plugin (assuming that an archive is extracted at ~/jre1.7.0_07)
JAVA_HOME=~/jre1.7.0_07
MOZILLA_HOME=~/.mozilla
mkdir $MOZILLA_HOME/plugins
ln -s $JAVA_HOME/lib/amd64/libnpjp2.so $MOZILLA_HOME/plugins

# enable touchpad on fujitsu-lifebook-uh572 (see https://lifebook.ts.fujitsu.com/blog/blog/category/general/ubuntu-12-10-quantal-quetzal-on-fujitsu-lifebook-uh572/s)
1. open the "/etc/default/grub" file
2. find the line containing: GRUB_CMDLINE_LINUX
3. add "i8042.notimeout i8042.nomux" to the string in quotes
4. save and exit
5. run "sudo update-grub"
6. reboot
